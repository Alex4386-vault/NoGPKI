<Window x:Class="NoGPKI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoGPKI"
        mc:Ignorable="d"
        Title="NoGPKI" Height="350" Width="250" ResizeMode="NoResize">
    <Grid>
        <TextBlock 
            x:Name="noGpkiInfo"
            Text="NoGPKI_INFO"
            HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="214" Margin="10,10,10,0"/>

        <Label x:Name="certStat" Content="Label" HorizontalAlignment="Left" Height="27" Margin="10,70,0,0" VerticalAlignment="Top" Width="224"/>

        <GroupBox x:Name="grpPanel"  Header="PANEL_BUTTONS" HorizontalAlignment="Left" Height="58" Margin="10,114,0,0" VerticalAlignment="Top" Width="219">
        </GroupBox>
        <Button x:Name="deleteCert" Content="BTN_DELCERT" HorizontalAlignment="Left" Height="24" Margin="25,140,0,0" VerticalAlignment="Top" Width="80" Click="deleteCert_Click"/>
        <Button x:Name="recoverCert" Content="BTN_RECCERT" HorizontalAlignment="Right" Height="24" Margin="0,140,28,0" VerticalAlignment="Top" Width="79" Click="recoverCert_Click"/>
        <ProgressBar x:Name="statusProgress" HorizontalAlignment="Left" Height="15" Margin="10,177,0,0" VerticalAlignment="Top" Width="219"/>
        <Label x:Name="statusLabel" Content="STATUS" HorizontalAlignment="Left" Margin="10,197,0,0" VerticalAlignment="Top" Width="219"/>

    </Grid>
</Window>
